

@{
    /*
      Для передачи данных между контроллером и представлением используются объекты ViewData и ViewBag. 
      Они представляют собой словари, формируемые динамически, и доступные как свойства в контроллере 
      и в представлении. 
    */
    ViewBag.Title = "Index"; // Объект ViewBag используется для передачи данных между контроллером и представлением.
}

@section SidePanel 
    {         
        <div class="alert-success">         
            <h4><i>Пример работы с секциями на странице шаблона</i></h4>     
        </div>        
    }


<div>
    <h2>Список</h2>
    <ol type="A">     
    @for (int i = 1; i < 5; i++)
    {
    <li>элемент @i списка</li>     
    }
    </ol> 
</div>
<hr />
<h2>Форма</h2>
@using (Html.BeginForm("Index", "Home", FormMethod.Get, new { @class = "form-horizontal" }))
{   
    <div class="form-group">
        <label for="colors" class="col-sm-2 control-label">Цвет:</label>
        <div class="col-md-8">
            @Html.DropDownList("colors", null, new { @class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
            <div class="checkbox">
                <label> 
                    @Html.CheckBox("checkbox1") Чек-бокс 1 
                </label>
            </div>
            <div class="checkbox">
                <label> 
                    @Html.CheckBox("checkbox2") Чек-бокс 2 
                </label>
            </div>
            <label class="radio-inline">
                @Html.RadioButton("radio", 1, true) Радио-1
            </label>
            <label class="radio-inline">
                @Html.RadioButton("radio", 2, false) Радио-2
            </label> 
        </div>
    </div>
    <div class="form-group">
        <label for="login" class="col-sm-2 control-label">Логин:</label>
        <div class="col-sm-8">
            @Html.TextBox("login", null, new { @class = "form-control", placeholder = "Введите логин" })
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-sm-2 control-label">Пароль:</label>
        <div class="col-sm-8">
            @Html.Password("password", null, new { @class = "form-control", placeholder = "Введите свой пароль" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
            <button type="submit" class="btn btn-default">Отправить</button>
        </div>
    </div>
}