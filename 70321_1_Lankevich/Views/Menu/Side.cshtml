@model IEnumerable<string>

<!-- получение названия текущей группы из запроса -->
@{ var txt = Request.RequestContext.RouteData.Values["genre"] ?? "Все жанры";}

<h3>Выберите жанр</h3>
<div class="btn-group">
    <button type="button" class="btn  btn-defult">@txt</button>
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
        <!-- первый элемент в списке - Все группы -->
        <li>
            <a href="@Url.Action("List", "Book")">Все группы</a>
        </li>
        <!-- формирование остального списка -->
        @{
            foreach (var item in Model)
            {
                <li>
                    <a href="@Url.Action("List", "Book", new { genre = item})">@item</a>
                </li>
            }
        }


    </ul>
</div>
